<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div
      class="collapse navbar-collapse justify-content-end"
      id="navbarNavAltMarkup"
    >
      <div class="navbar-nav">
        <% if (username) { %>
        <div class="nav-item active text-white d-flex">
          <span class="mb-0 align-self-center">Hello,</span>
          <span
            class="mb-0 ml-1 font-italic font-weight-bold text-light align-self-center"
          >
            <%= username %>
          </span>
          <span class="mb-0 mr-3 align-self-center">!</span>
          <form method="POST" action="/logout" class="form-inline">
            <button type="submit" class="btn btn-outline-info my-2 my-sm-0">
              Logout
            </button>
          </form>
        </div>
        <% } else { %>
        <div class="navbar-nav">
          <form class="nav-item form-inline" method="POST" action="/login">
            <div class="form-group mb-2">
              <input
                class="form-control"
                type="text"
                name="username"
                placeholder="Username"
                style="width: 250px; margin: 1em"
              />
              <button type="submit" class="btn btn-outline-info">Login</button>
            </div>
          </form>
          <% } %>
        </div>
      </div>
    </div>
  </nav>
</header>
